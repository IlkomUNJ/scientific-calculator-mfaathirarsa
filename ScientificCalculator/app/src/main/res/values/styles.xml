<resources>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CalcButton.Num" parent="CalcButton">
        <item name="android:backgroundTint">@color/black_shade_3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalcButton.Op" parent="CalcButton">
        <item name="android:backgroundTint">@color/black_shade_2</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="CalcButton.Func" parent="CalcButton">
        <item name="android:backgroundTint">@color/black_shade_2</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

</resources>
